    /* Out of Stock */
    .menu-item-card.out-of-stock {
        opacity: 0.6;
    }

    .menu-item-card.out-of-stock .card-image {
        filter: grayscale(100%);
    }

    /* Item Details Modal */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: 1000;
        display: none;
        backdrop-filter: blur(4px);
    }

    .modal-overlay.active {
        display: block;
    }

    .item-modal {
        position: fixed;
        bottom: -100%;
        left: 0;
        width: 100%;
        height: 70vh;
        background: white;
        border-radius: var(--radius-lg) var(--radius-lg) 0 0;
        z-index: 1001;
        transition: bottom 0.3s ease;
        overflow-y: auto;
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
    }

    .item-modal.active {
        bottom: 0;
    }

    .modal-header {
        display: none;
    }

    .modal-close {
        position: fixed;
        top: calc(30vh - 20px);
        left: 50%;
        transform: translateX(-50%);
        background: white;
        border: none;
        color: #333;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-full);
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
        z-index: 1002;
        transition: all var(--transition-fast);
    }

    .modal-close:hover {
        transform: translateX(-50%) scale(1.1);
    }

    .modal-body {
        padding: 0;
    }

    .modal-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 0;
        margin-bottom: 0;
    }

    .modal-content-wrapper {
        padding: 12px 16px;
        background: white;
    }

    .modal-meta-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

