/* Hero Slider */
.hero-slider {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-xl);
}

.slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.8s ease;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: flex-end;
}

.slide.active {
    opacity: 1;
}

.slide-content {
    width: 100%;
    padding: var(--spacing-xl);
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    color: white;
}

.slide-badge {
    background-color: var(--primary);
    color: white;
    padding: 4px 12px;
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: var(--spacing-sm);
    display: inline-block;
}

.slide-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: var(--spacing-xs);
}

/* Category Filter */
.category-filter {
    display: flex;
    gap: var(--spacing-sm);
    overflow-x: auto;
    padding: var(--spacing-sm) 0;
    margin-bottom: var(--spacing-lg);
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
}

.category-filter::-webkit-scrollbar {
    display: none;
}

.category-chip {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12px;
    border-radius: var(--radius-lg);
    background-color: var(--bg-elevated);
    color: var(--text-muted);
    font-weight: 500;
    white-space: nowrap;
    transition: all var(--transition-fast);
    border: 1px solid transparent;
    gap: 8px;
    flex-shrink: 0;
    cursor: pointer;
    user-select: none;
    width: 90px;
}

.category-img {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
}

.category-chip:hover {
    background-color: var(--bg-surface);
    color: var(--text-main);
}

.category-chip.active {
    background-color: var(--primary);
    color: white;
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.3);
    transform: translateY(-2px);
}

/* Search Bar */
.search-bar-container {
    margin-bottom: var(--spacing-lg);
    position: relative;
}

.search-input {
    width: 100%;
    padding: 16px 20px;
    padding-left: 50px;
    border-radius: var(--radius-md);
    background-color: var(--bg-surface);
    border: 1px solid var(--border-color);
    color: var(--text-main);
    font-size: 1rem;
    transition: border-color var(--transition-fast);
}

.search-input:focus {
    outline: none;
    border-color: var(--primary);
}

.search-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
}

/* Menu Grid */
.menu-grid {
    display: block;
}

/* Category Section */
.category-section {
    margin-bottom: var(--spacing-xl);
}

.category-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 2px solid var(--border-color);
}

/* Items Carousel */
.items-carousel {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-lg);
}

.menu-item-card {
    background-color: var(--bg-surface);
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    position: relative;
    display: flex;
    flex-direction: column;
    cursor: pointer;
}

.menu-item-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

/* Out of Stock Badge */
.out-of-stock-badge {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: rgba(0, 0, 0, 0.85);
    color: white;
    padding: 8px 16px;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.875rem;
    z-index: 10;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Card Image & Rating */
.card-image-container {
    position: relative;
    width: 100%;
    height: 200px;
}

.card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.card-rating {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #FFD700;
    padding: 4px 8px;
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 0.875rem;
    font-weight: 600;
    backdrop-filter: blur(4px);
}

.star-icon {
    width: 14px;
    height: 14px;
    fill: #FFD700;
}

/* Card Content */
.card-content {
    padding: var(--spacing-md);
    flex: 1;
    display: flex;
    flex-direction: column;
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
}

.item-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-main);
}

.item-price {
    font-weight: 700;
    color: var(--primary);
}

.card-meta {
    margin-bottom: var(--spacing-sm);
}

.item-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--primary);
    font-weight: 600;
}

.item-desc {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: var(--spacing-md);
    line-height: 1.4;
}

.item-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-top: auto;
}

