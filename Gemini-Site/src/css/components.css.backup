        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
    }

    .modal-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 12px;
    }

    .modal-description {
        color: #666;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 12px;
    }

    .modal-variants {
        margin-bottom: 12px;
    }

    .modal-variants h4 {
        font-size: 0.875rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
    }

    .modal-variants-list {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .modal-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .hero-slider {
            height: 160px;
            margin-bottom: var(--spacing-md);
        }

        .slide-content {
            padding: var(--spacing-md);
        }

        .slide-badge {
            font-size: 0.7rem;
            padding: 2px 8px;
            margin-bottom: 4px;
        }

        .slide-title {
            font-size: 1.25rem;
            margin-bottom: 2px;
        }

        .slide-content p {
            font-size: 0.8rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-clamp: 2;
        }

        .category-filter {
            margin-left: -1rem;
            margin-right: -1rem;
            padding-left: 1rem;
            padding-right: 1rem;
            scroll-snap-type: x mandatory;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none;
        }

        .items-carousel::-webkit-scrollbar {
            display: none;
        }

        .items-carousel .menu-item-card {
            min-width: 160px;
            width: 160px;
            flex-shrink: 0;
            scroll-snap-align: start;
        }

        .card-image-container {
            height: 90px;
        }

        .card-content {
            padding: 8px;
            position: relative;
            padding-bottom: 28px;
        }

        .card-header {
            flex-direction: column;
            margin-bottom: 4px;
        }

        .item-title {
            font-size: 0.9rem;
            margin-bottom: 2px;
            width: 100%;
            line-height: 1.2;
            font-weight: 300;
        }

        /* Hide elements on mobile */
        .item-desc,
        .item-tags,
        .item-variants,
        .card-meta {
            display: none !important;
        }

        /* Smaller rating on mobile */
        .card-rating {
            padding: 2px 6px;
            font-size: 0.75rem;
            bottom: 0;
            right: 0;
            background: linear-gradient(135deg, transparent 20%, rgba(0, 0, 0, 0.8));
            border-radius: 8px 0 0 0;
            backdrop-filter: none;
        }

        .star-icon {
            width: 12px;
            height: 12px;
        }

        /* Price at bottom left */
        .item-price {
            position: absolute;
            bottom: 5px;
            left: 8px;
            font-size: 0.95rem;
        }

        /* Veg/non-veg indicator at bottom right */
        .card-content::after {
            content: '';
            position: absolute;
            bottom: 10px;
            right: 10px;
            width: 16px;
            height: 16px;
            border: 2px solid #4CAF50;
            border-radius: 2px;
            background: white;
        }

        .card-content::before {
            content: '';
            position: absolute;
            bottom: 14px;
            right: 14px;
            width: 8px;
            height: 8px;
            background: #4CAF50;
            border-radius: 50%;
            z-index: 1;
        }
    }